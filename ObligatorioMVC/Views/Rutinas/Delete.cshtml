@model ObligatorioMVC.Models.Rutina

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-light">Eliminar</h1>

<h3 class="text-light">¿Está seguro de eliminarlo?</h3>
<div>
    <h4 class="text-light">Rutina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionRutina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionRutina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoRutina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoRutina.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>

<style>
    body {
        background-color: #333;
        color: #ddd;
    }

    h1, h3, h4 {
        color: #fff;
    }

    .row {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #666;
        border-color: #777;
    }

        .btn-secondary:hover {
            background-color: #777;
            border-color: #888;
        }
</style>
