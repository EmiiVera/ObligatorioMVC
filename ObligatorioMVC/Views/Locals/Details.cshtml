@model ObligatorioMVC.Models.Local

@{
    ViewData["Title"] = "Detalles";
}

<h1 class="text-light">Detalles</h1>

<div>
    <h4 class="text-light">Local</h4>
    <hr class="bg-light" />
    <dl class="row">
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.NombreLocal)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.NombreLocal)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Ciudad)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.TelefonoLocal)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.TelefonoLocal)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.ResponsableLocal)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.ResponsableLocal.Nombre)
        </dd>
    </dl>
</div>

<div class="mt-4">
    <h4 class="text-light">Tipos de Máquinas en este Local</h4>
    <hr class="bg-light" />
    <div class="table-responsive">
        <table class="table table-dark table-striped text-center">
            <thead>
                <tr>
                    <th>Tipo de Máquina</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Maquina != null)
                {
                    @foreach (var tipo in Model.Maquina.GroupBy(m => m.TipoMaquina?.Nombre))
                    {
                        <tr>
                            <td>@(tipo.Key ?? "Sin tipo")</td>
                            <td>@tipo.Count()</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">No hay máquinas asociadas a este local.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>

<style>
    body {
        background-color: #333;
        color: #ddd;
    }

    h1,
    h4 {
        color: #fff;
    }

    .text-light {
        color: #ddd !important;
    }

    .bg-light {
        border-top: 1px solid #fff;
    }

    .btn-primary {
        background-color: #555;
        border-color: #666;
    }

        .btn-primary:hover {
            background-color: #666;
            border-color: #777;
        }

    .btn-secondary {
        background-color: #666;
        border-color: #777;
    }

        .btn-secondary:hover {
            background-color: #777;
            border-color: #888;
        }
</style>
