@model ObligatorioMVC.Models.Local

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-light">Eliminar</h1>

<h3 class="text-light">¿Está seguro de eliminarlo?</h3>
<div>
    <h4 class="text-light">Locales</h4>
    <hr class="bg-light" />
    <dl class="row">
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.NombreLocal)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.NombreLocal)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Ciudad)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.TelefonoLocal)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.TelefonoLocal)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.ResponsableLocal)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.ResponsableLocal.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>

<style>
    body {
        background-color: #333;
        color: #ddd;
    }

    h1, h3, h4 {
        color: #fff;
    }

    .text-light {
        color: #ddd !important;
    }

    .bg-light {
        border-top: 1px solid #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
