@model ObligatorioMVC.Models.Socio

@{
    ViewData["Title"] = "Detalles";
}

<h1 class="text-light">Detalles del Socio</h1>

<div>
    <h4 class="text-light">Socio</h4>
    <hr class="bg-light" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Local.Ciudad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoSocio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoSocio.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
    </dl>

    <h4 class="text-light">Rutinas Asignadas</h4>
    <hr class="bg-light" />
    @if (Model.SocioRutinas != null && Model.SocioRutinas.Any())
    {
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th class="text-light">Descripción de la Rutina</th>
                    <th class="text-light">Calificación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sr in Model.SocioRutinas)
                {
                    <tr>
                        <td>@sr.Rutina.DescripcionRutina</td>
                        <td>@(sr.Calificacion.HasValue ? sr.Calificacion.ToString() : "Sin calificar")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No tiene rutinas asignadas.</p>
    }
</div>

<div>
    <a asp-action="Editar" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

<style>
    /* Estilos adicionales según tu preferencia */
    body {
        background-color: #333;
        color: #ddd;
    }

    h1, h4 {
        color: #fff;
    }

    .row {
        margin-top: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #555;
        border-color: #666;
    }

        .btn-primary:hover {
            background-color: #666;
            border-color: #777;
        }

    .btn-secondary {
        background-color: #666;
        border-color: #777;
        margin-left: 5px; /* Añadido para separación */
    }

        .btn-secondary:hover {
            background-color: #777;
            border-color: #888;
        }

    hr {
        border-top: 1px solid #fff;
    }
</style>
