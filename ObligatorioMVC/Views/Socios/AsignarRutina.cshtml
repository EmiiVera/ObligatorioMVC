@model ObligatorioMVC.Models.Socio

@{
    ViewData["Title"] = "Asignar Rutina";
}


<h1>Asignar Rutina a Socio</h1>

<h4>@Model.Nombre</h4>

<div class="card-deck">
    @if (Model?.SocioRutinas != null)
    {
        foreach (var sr in Model.SocioRutinas)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@sr.Rutina.DescripcionRutina</h5>
                    <form asp-action="DesasignarRutina" method="post" class="mt-2">
                        <input type="hidden" name="idSocio" value="@Model.Id" />
                        <input type="hidden" name="idRutina" value="@sr.IdRutina" />
                        <button type="submit" class="btn btn-danger">Desasignar rutina</button>
                    </form>
                </div>
            </div>
        }
    }
</div>

<div>
    <form asp-action="AsignarRutina" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="hidden" name="idSocio" value="@Model.Id" />
            <label for="idRutina" class="control-label">Asignar rutina</label>
            <select id="idRutina" name="idRutina" class="form-control">
                @foreach (var rutina in ViewBag.Rutinas as SelectList)
                {
                    <option value="@rutina.Value">@rutina.Text</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Asignar rutina" class="btn btn-success" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista de socios</a>
</div>

<style>
    body {
        background-color: #333;
        color: #ddd;
    }

    h1, h4 {
        color: #fff;
    }

    .card-deck {
        display: flex;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
        
    }

    .card {
        flex: 0 0 calc(20% - 30px);
        padding-right: 15px;
        padding-left: 15px;
        margin-bottom: 30px;
        border: none; /* Quita el borde */
        background-color: transparent; /* Quita el fondo */
    }

    .card-body {
        background-color: #444;
        border: 1px solid #555;
        border-radius: .25rem;
        padding: 1.25rem;
    }

    .card-title {
        color: #fff;
        font-size: 1.25rem;
        margin-bottom: .75rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        background-color: #555;
        border-color: #666;
        color: #ddd;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #666;
        border-color: #777;
    }

        .btn-secondary:hover {
            background-color: #777;
            border-color: #888;
        }
</style>