@model ObligatorioMVC.Models.Maquina

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h1 style="color: #fff;">Eliminar</h1>

    <h3 style="color: #fff;">¿Está seguro de eliminarlo?</h3>
    <div>
        <h4 style="color: #fff;">Maquina</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaCompra)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaCompra)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecioCompra)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecioCompra)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Disponibilidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Disponibilidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoMaquina)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoMaquina.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Local)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Local.Ciudad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VidaUtil)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VidaUtil)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" style="color: #fff;">Volver a la lista</a>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #333;
        color: #fff;
    }

    h1, h3, h4 {
        color: #fff;
    }

    .row {
        margin-top: 20px;
    }

    dl {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 15px;
        border-radius: 5px;
    }

    dt {
        font-weight: bold;
        color: #fff;
    }

    dd {
        margin-left: 0;
        color: #fff;
    }

    .btn-danger {
        background-color: #800000;
        border-color: #990000;
    }

        .btn-danger:hover {
            background-color: #990000;
            border-color: #aa0000;
        }

    a {
        color: #fff;
    }
</style>
