@model IEnumerable<ObligatorioMVC.Models.Responsable>

@{
    ViewData["Title"] = "Responsables";
}

<h1 class="text-light text-center">Responsables</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Ingresar Responsable</a>
</p>

<div class="table-responsive">
    <table class="table table-dark table-striped text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sueldo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sueldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #333;
        color: #ddd;
    }

    h1 {
        color: #fff;
    }

    .table {
        background-color: #444;
    }

        .table thead th {
            color: #ccc;
        }

        .table tbody td {
            color: #ddd;
            text-align: center;
        }

    .btn-primary {
        background-color: #555;
        border-color: #666;
    }

        .btn-primary:hover {
            background-color: #666;
            border-color: #777;
        }

    .btn-secondary {
        background-color: #666;
        border-color: #777;
    }

        .btn-secondary:hover {
            background-color: #777;
            border-color: #888;
        }

    .btn-danger {
        background-color: #800000;
        border-color: #990000;
    }

        .btn-danger:hover {
            background-color: #990000;
            border-color: #aa0000;
        }

    .btn-sm {
        margin-right: 5px;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
